<%= form_with(model: friend, local: true) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>
      <ul>
        <% friend.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :friend_name %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_field :birthday, id: :friend_birthday %>
  </div>

  <h3>Gift Ideas:</h3>
  <div id="gifts">
    <%= form.fields_for :gifts do |gift_form| %>
      <%= render 'gifts/gift_fields', f: gift_form %>
    <% end %>
  </div>
  <%= link_to 'Add Gift', '#', id: 'add-gift-link', class: 'btn btn-primary' %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<template id="gift-fields-template">
  <div class="nested-fields">
    <div class="field">
      <%= form.label :gifts_attributes_NEW_RECORD_name, 'Gift name' %>
      <%= text_field_tag 'friend[gifts_attributes][NEW_RECORD][name]', '', class: 'form-control' %>
    </div>
    <div class="field">
      <%= form.label :gifts_attributes_NEW_RECORD_price, 'Price' %>
      <%= text_field_tag 'friend[gifts_attributes][NEW_RECORD][price]', '', class: 'form-control' %>
    </div>
    <div class="field">
      <%= form.label :gifts_attributes_NEW_RECORD_link, 'Link' %>
      <%= text_field_tag 'friend[gifts_attributes][NEW_RECORD][link]', '', class: 'form-control' %>
    </div>
    <%= link_to 'Remove this gift', '#', class: 'remove-gift' %>
  </div>
</template>
